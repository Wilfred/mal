# -*- mode: gdb-script; -*-

# allow stepping in files without debug symbols
set step-mode on
# show the assembly being executed
display/i $pc

# show registers as we execute, in hex
display/x $rdi
display/x $rax

# see what we're displaying
info display

# disable unwanted display commands
undisplay 2 # use numbers from info

# to display things again
display
